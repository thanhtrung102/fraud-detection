# Example Terraform Variables
# Copy to terraform.tfvars and fill in your values

project_id  = "your-gcp-project-id"
region      = "us-central1"
environment = "dev"

# Database
db_tier     = "db-f1-micro"  # Use db-g1-small for staging, db-custom-2-4096 for prod
db_password = "your-secure-password"  # Use a strong password!

# Authorized networks for database access
# Add your IP for direct database access (optional)
authorized_networks = [
  # {
  #   name = "office"
  #   cidr = "203.0.113.0/24"
  # }
]

# API Configuration
api_cpu           = "1"
api_memory        = "2Gi"
api_min_instances = 0   # Set to 1+ for prod to avoid cold starts
api_max_instances = 10

# Security
allow_unauthenticated = true  # Set to false for production

# Docker
docker_image_tag = "latest"
